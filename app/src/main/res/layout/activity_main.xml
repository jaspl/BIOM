<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/movementSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="No movement!"
        android:textColor="@color/textColor"/>

    <Button
        android:id="@+id/delete"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/the_button"
        android:text="delete last movement"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/usernameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="No user"
        android:textSize="25dp"
        android:textColor="@color/textColor"/>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
        >

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:hint="username"
            android:backgroundTint="#0080FF"
            android:textColorHighlight="#F7A000"
            android:textCursorDrawable="@drawable/butt_shape"
            android:textColor="@color/textColor"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/newUser"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:background="@drawable/the_button"
        android:text="New user"
        android:textColor="#FFFFFF" />


    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColor"/>


</LinearLayout>